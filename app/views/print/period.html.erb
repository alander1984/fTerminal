<p><%= @wName %>: <%= @totalAmount %></p>
<table border=1 style="border-collapse: collapse;">
<% @parsed_json.each do |info| %>
	<% if !info['detail'].blank? %>
		<tr style="border: 1px solid black;"><td colspan=4 style="border: 1px solid black;"><font size=3><%= info['day']+' Сумма: '+info['amount'].to_s %></font></td></tr>		
		<% info['detail'].each do |e| %>
		<tr style="border: 1px solid black;">
				<td style="border: 1px solid black;"><font size=2><%= e['operation_name'] %></font></td>
				<td style="border: 1px solid black;"><font size=2><%= e['cnt'] %></font></td>
				<td style="border: 1px solid black;"><font size=2><%= e['cost'] %></font></td>
				<td style="border: 1px solid black;"><font size=2><%= e['amount'] %></font></td>
		</tr>	
			<% end %>
	<% end %>
<% end %>
</table>

